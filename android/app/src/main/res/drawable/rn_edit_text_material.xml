<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:insetLeft="@dimen/abc_edit_text_inset_horizontal_material"
       android:insetRight="@dimen/abc_edit_text_inset_horizontal_material"
       android:insetTop="@dimen/abc_edit_text_inset_top_material"
       android:insetBottom="@dimen/abc_edit_text_inset_bottom_material">

  <selector>
    <!-- 
      This is used when the background is pressed. We use a drawable
      to avoid having to create a ColorStateList just for this.
    -->
    <item android:state_pressed="true">
      <nine-patch android:src="@drawable/abc_textfield_activated_mtrl_alpha"
                   android:alpha="?android:attr/colorControlHighlight"
                   android:tint="?attr/colorPrimary" />
    </item>
    
    <!-- 
      This is the default background. We use a drawable to avoid having
      to create a ColorStateList just for this.
    -->
    <item>
      <nine-patch android:src="@drawable/abc_textfield_default_mtrl_alpha"
                   android:tint="?attr/colorPrimary" />
    </item>
  </selector>

</inset>
